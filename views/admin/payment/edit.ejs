<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ubah Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">
              <a href="/payment">Jenis Pembayaran</a>
            </li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah jenis pembayaran</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%=payment._id%>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="coinQuantity">Tipe</label>
                  <input
                    type="text"
                    name="tipe"
                    class="form-control"
                    id="tipe"
                    value="<%=payment.tipe%>"
                    placeholder="Masukan jenis pembayaran"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Bank</label>
                  <div class="select2-purple">
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    data-placeholder="Pilih Bank"
                    multiple="multiple"
                    name="bank"
                    id="bank"
                    required
                  >
                    
                    <% bank.forEach(x => { %>
                    <option value="<%=x._id%>" 
                        <% payment.bank.forEach(pBank => { %>
                    <% if (x._id.toString() === pBank?._id.toString()){ %>
                        selected
                        <% } %>    
                        <% }) %>    
                    >
                      <%=x.name %> - <%=x.namaBank %> - <%=x.noRekening %>
                    </option>
                    <% })%>
                  </select>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
